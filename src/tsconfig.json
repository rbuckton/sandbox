{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["esnext"],
        "module": "commonjs",
        "outDir": "../dist",
        "strict": true,
        "noEmitOnError": true,
        "sourceMap": false,
        "stripInternal": true,
        "declaration": true,
        "declarationMap": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "**/*.ts"
    ]
}